!!! Strict
%html{html_attrs}
  
  %head
    %title
      = h(yield(:title) || "Untitled")
    %meta{"http-equiv"=>"Content-Type", :content=>"text/html; charset=utf-8"}/

    = stylesheet_link_tag 'blueprint-sass/screen.css', :media => 'screen, projection'
    = stylesheet_link_tag 'blueprint-sass/print.css', :media => 'print'
    /[if lt IE 8]
      = stylesheet_link_tag 'blueprint-sass/ie.css', :media => 'screen, projection'

    / uncomment for activating blueprint plugins
    /= stylesheet_link_tag 'blueprint-sass/plugins/buttons/screen.css', :media => 'screen, projection'
    /= stylesheet_link_tag 'blueprint-sass/plugins/fancy-type/screen.css', :media => 'screen, projection'
    /= stylesheet_link_tag 'blueprint-sass/plugins/link-icons/screen.css', :media => 'screen, projection'
    /= stylesheet_link_tag 'blueprint-sass/plugins/rtl/screen.css', :media => 'screen, projection'

    = stylesheet_link_tag '<%= file_name %>'
    = yield(:head)

  %body
    .container
      - flash.each do |name, msg|
        = content_tag :div, msg, :id => "flash_#{name}"
      
      - if show_title?
        %h1=h yield(:title)
      
      = yield
